<div class="posts">


<% @posts.each do |post| %>
  <div class="post">
    <h3><%= link_to post.title, post %></h3>
		<p class="comment_count"><%= post.comments.count %></p>
    	<div class="post_body"><%= raw RedCloth.new(post.body.truncate(300)).to_html %> <%= link_to ' Read More', post if post.body.length > 300 %>

    	</div>
		<div class="date">Posted on <%= post.created_at %></div>
  </div>
<% end %>

</div>

<%= paginate @posts, :window => 3 %>

